Bootstrap: docker
From: ghcr.io/imageomics/pybioclip:{{ VERSION }}

%arguments
    VERSION=
    REVISION=

%runscript
   exec bash

%labels
    org.opencontainers.image.url https://github.com/Imageomics/pybioclip
